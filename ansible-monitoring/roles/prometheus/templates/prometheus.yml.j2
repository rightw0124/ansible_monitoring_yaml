global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']   # 또는 'control.example.com:9093'

rule_files:
  - "/etc/prometheus/alert_rules/alerts.yml"

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for host in groups['node_exporters'] %}
        - "{{ hostvars[host].ansible_host | default(host) }}:9100"
{% endfor %}

