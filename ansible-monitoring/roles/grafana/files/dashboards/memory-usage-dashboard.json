{
  "id": null,
  "uid": "memory-usage-dashboard",
  "title": "Memory Usage Dashboard",
  "schemaVersion": 30,
  "version": 2,
  "tags": ["memory", "node_exporter"],
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "Memory Usage (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 14 },
      "legend": {
        "show": true,
        "values": true,
        "min": false,
        "max": true,
        "current": true,
        "total": false
      },
      "lines": true,
      "points": true,
      "linewidth": 2,
      "fill": 1,
      "xaxis": {
        "mode": "time",
        "show": true,
        "label": "Time"
      },
      "yaxes": [
        {
          "show": true,
          "format": "percent",
          "min": 0,
          "max": 100,
          "label": "Memory Usage %"
        },
        {
          "show": false
        }
      ],
      "tooltip": {
        "shared": true,
        "sort": 0,
        "value_type": "individual"
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}

