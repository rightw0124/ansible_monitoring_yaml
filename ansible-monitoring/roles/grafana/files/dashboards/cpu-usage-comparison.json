{
  "id": null,
  "uid": "cpu-usage-comparison",
  "title": "CPU Usage Comparison",
  "schemaVersion": 30,
  "version": 1,
  "tags": ["cpu", "node_exporter"],
  "timezone": "browser",
  "panels": [
    {
      "type": "graph",
      "title": "Method 1: 100 * (1 - avg by(instance)(rate(...)))",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "100 * (1 - avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "yaxes": [
        { "format": "percent", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    },
    {
      "type": "graph",
      "title": "Method 2: avg by(instance)(100 * (1 - rate(...)))",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg by(instance)(100 * (1 - rate(node_cpu_seconds_total{mode=\"idle\"}[5m])))",
          "legendFormat": "{{instance}}",
          "refId": "B"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "yaxes": [
        { "format": "percent", "min": 0, "max": 100 },
        { "format": "short" }
      ]
    }
  ],
  "time": { "from": "now-1h", "to": "now" }
}

